<script>
class ModelThemeManager {
  constructor() {
    this.slug = {{{json model.slug}}};
    if (!this.slug) {
      const m = location.pathname.match(/^\/([^\/]+)\/admin/);
      if (m) this.slug = m[1];
    }

    this.modelId = null;  // Will be loaded from API
    this.availableThemes = [];
    this.customPalettes = [];
    this.currentTheme = null;
    this.activeTheme = null; // Currently live theme on website
    this.currentColors = {};
    this.hasUnsavedChanges = false;
    
    // Palette management
    this.isEditingPalette = false;
    this.editingPaletteId = null;
    this.currentPaletteColors = {};
    this.selectedPalette = null;
    this.appliedPalette = null; // Palette applied to current theme
    this.activePaletteId = null; // Currently active palette on live site (NULL = using theme default)

    this.init();
  }
  
  async init() {
    console.log('üé® Initializing Model Theme Manager for:', this.slug);
    await this.loadAvailableThemes();
    await this.loadCustomPalettes();
    await this.loadActiveTheme();
    await this.loadCurrentTheme();
    this.bindEventListeners();
    this.bindPaletteEventListeners();
    console.log('‚úÖ Model Theme Manager initialized');
  }
  
  async loadAvailableThemes() {
    try {
      const response = await fetch('/api/theme-management/themes');
      const data = await response.json();
      
      this.availableThemes = data.success && data.data && data.data.themes ? data.data.themes : [];
      console.log('üåà Loaded themes:', this.availableThemes);
    } catch (error) {
      console.error('‚ùå Error loading themes:', error);
      this.showError('Failed to load available themes');
    }
  }
  
  async loadActiveTheme() {
    try {
      const response = await fetch(`/api/model-theme-settings/${encodeURIComponent(this.slug)}/active`);
      const data = await response.json();
      
      if (data.success) {
        // Handle nested response structure
        const themeId = data.data.theme_set_id || (data.data.data && data.data.data.theme_set_id);
        this.activeTheme = themeId;
        console.log('üåü Active theme:', this.activeTheme);
        this.updateActiveThemeIndicator();
        // Render themes now that we have the active theme data
        this.renderThemeSelection();
      }
    } catch (error) {
      console.error('‚ùå Error loading active theme:', error);
      // Render themes even if active theme loading fails
      this.renderThemeSelection();
    }
  }

  async loadCurrentTheme() {
    try {
      const response = await fetch(`/api/model-theme-settings/${encodeURIComponent(this.slug)}`);
      const data = await response.json();
      
      if (data.success) {
        this.currentTheme = data.data.theme_set_id;
        this.currentColors = data.data.custom_colors || {};
        this.updateThemeSelection();
        
        if (this.currentTheme) {
          this.showColorCustomization();
        }
      }
    } catch (error) {
      console.error('‚ùå Error loading current theme:', error);
    }
  }

  async loadCustomPalettes() {
    try {
      // Always fetch profile to get the latest active palette ID
      const profileResponse = await fetch(`/api/model-profile/${this.slug}`);
      if (profileResponse.ok) {
        const profileData = await profileResponse.json();
        console.log('üé® Profile data received:', profileData);
        this.modelId = profileData.data.id;
        // Access active_color_palette_id directly from the raw query result
        this.activePaletteId = profileData.data.active_color_palette_id || null;
        console.log('üé® Active palette ID:', this.activePaletteId === null ? 'NULL (using theme default)' : this.activePaletteId, 'Type:', typeof this.activePaletteId);
      }

      if (!this.modelId) {
        throw new Error('Could not determine model ID');
      }

      // Load custom palettes from API
      const response = await fetch(`/api/color-palettes/models/${this.modelId}/palettes`);

      if (!response.ok) {
        throw new Error('Failed to load palettes');
      }

      const data = await response.json();

      // Show only palettes created by THIS model (not system palettes or other models' palettes)
      const availablePalettes = data.palettes.filter(p => p.is_custom === true);

      // Map API response to expected format
      this.customPalettes = availablePalettes.map(palette => {
        return {
          id: palette.id,
          name: palette.display_name || palette.name,
          colors: palette.preview_colors || {},
          created_at: palette.created_at ? new Date(palette.created_at) : new Date(),
          is_default: false
        };
      });

      this.renderCustomPalettes();
      console.log('üåà Loaded custom palettes from API:', this.customPalettes);
    } catch (error) {
      console.error('‚ùå Error loading custom palettes:', error);
      this.showError('Failed to load custom palettes');
    }
  }

  renderCustomPalettes() {
    const container = document.getElementById('custom-palettes-grid');
    const loadingIndicator = document.getElementById('palettes-loading');

    if (loadingIndicator) {
      loadingIndicator.style.display = 'none';
    }

    if (!this.customPalettes.length) {
      container.innerHTML = `
        <div class="col-12 text-center py-4">
          <i class="fas fa-palette fs-1 text-muted mb-3"></i>
          <p class="text-muted">No custom palettes yet. Create your first one!</p>
        </div>`;
      return;
    }

    console.log('üé® Rendering palettes. Active palette ID:', this.activePaletteId, 'Type:', typeof this.activePaletteId);
    console.log('üé® Available palettes:', this.customPalettes.map(p => ({ id: p.id, name: p.name, type: typeof p.id })));

    container.innerHTML = this.customPalettes.map(palette => {
      const isActive = this.activePaletteId === palette.id;
      console.log(`üé® Checking palette ${palette.id} (${palette.name}): activePaletteId=${this.activePaletteId}, palette.id=${palette.id}, isActive=${isActive}`);
      return `
      <div class="col-md-6 col-lg-4">
        <div class="palette-card ${this.selectedPalette === palette.id ? 'selected' : ''}"
             data-palette-id="${palette.id}">
          <div class="palette-header p-3 pb-2">
            <div class="d-flex justify-content-between align-items-start">
              <div class="flex-grow-1">
                <div class="d-flex align-items-center gap-2 mb-1">
                  <h6 class="mb-0 fw-bold">${palette.name}</h6>
                  ${isActive ? '<span class="badge bg-success text-white px-2 py-1" style="font-size: 0.65rem; animation: pulse 2s infinite;"><i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i>LIVE</span>' : ''}
                </div>
                <small class="text-muted">${palette.is_default ? 'Default' : 'Custom'}</small>
              </div>
              <div class="btn-group btn-group-sm">
                <button class="btn btn-outline-primary" 
                        onclick="themeManager.editPalette(${palette.id})"
                        title="Edit palette">
                  <i class="fas fa-edit"></i>
                </button>
                <button class="btn btn-outline-success" 
                        onclick="themeManager.selectPalette(${palette.id})"
                        title="Select palette">
                  <i class="fas fa-check"></i>
                </button>
                ${!palette.is_default ? `
                <button class="btn btn-outline-danger" 
                        onclick="themeManager.deletePalette(${palette.id})"
                        title="Delete palette">
                  <i class="fas fa-trash"></i>
                </button>` : ''}
              </div>
            </div>
          </div>
          <div class="palette-preview-mini p-3 pt-0">
            <div class="color-swatches d-flex gap-1">
              <div class="color-swatch" style="background-color: ${palette.colors.primary}"></div>
              <div class="color-swatch" style="background-color: ${palette.colors.secondary}"></div>
              <div class="color-swatch" style="background-color: ${palette.colors.accent}"></div>
              <div class="color-swatch" style="background-color: ${palette.colors.background}; border: 1px solid #dee2e6;"></div>
              <div class="color-swatch" style="background-color: ${palette.colors.text}"></div>
            </div>
          </div>
        </div>
      </div>`;
    }).join('');
  }

  // Palette Management Methods
  createNewPalette() {
    this.isEditingPalette = true;
    this.editingPaletteId = null;
    this.currentPaletteColors = {
      primary: "#3B82F6",
      secondary: "#10B981", 
      accent: "#F59E0B",
      background: "#FFFFFF",
      text: "#1F2937"
    };
    
    document.getElementById('editor-title').textContent = 'Create New Palette';
    document.getElementById('palette-name').value = '';
    this.showPaletteEditor();
    this.renderPaletteColorControls();
    this.updatePalettePreview();
  }

  async editPalette(paletteId) {
    const palette = this.customPalettes.find(p => p.id === paletteId);
    if (!palette) return;

    try {
      // Fetch full palette data with ALL 15 color tokens from API
      const response = await fetch(`/api/color-palettes/${paletteId}`);
      if (!response.ok) {
        throw new Error('Failed to load palette details');
      }

      const data = await response.json();
      const fullColors = data.data.colors || {};

      console.log('üìù Editing palette:', paletteId, 'Loaded colors:', fullColors);

      this.isEditingPalette = true;
      this.editingPaletteId = paletteId;
      this.currentPaletteColors = { ...fullColors };

      document.getElementById('editor-title').textContent = 'Edit Palette';
      document.getElementById('palette-name').value = palette.name;
      this.showPaletteEditor();
      this.renderPaletteColorControls();
      this.updatePalettePreview();
    } catch (error) {
      console.error('‚ùå Error loading palette for editing:', error);
      this.showError('Failed to load palette colors');
    }
  }

  async selectPalette(paletteId) {
    console.log('üîÑ Selecting palette with ID:', paletteId, 'Previous selected:', this.selectedPalette);

    const palette = this.customPalettes.find(p => p.id === paletteId);
    if (!palette) {
      this.showError('Palette not found');
      return;
    }

    // Save to database: Update model's active_color_palette_id
    const modelSlug = window.location.pathname.split('/')[1];
    try {
      const response = await fetch(`/api/model-profile/${modelSlug}/apply-palette`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ palette_id: paletteId })
      });

      if (response.ok) {
        const result = await response.json();
        console.log('üíæ Palette applied to model:', result);

        this.selectedPalette = paletteId;
        this.activePaletteId = paletteId; // Update active palette to show LIVE badge
        this.renderCustomPalettes();

        console.log('üé® Palette selected:', palette.name, 'Colors:', palette.colors);
        console.log('‚úÖ this.selectedPalette is now:', this.selectedPalette);
        console.log('‚úÖ this.activePaletteId is now:', this.activePaletteId);

        this.showSuccess(`Applied palette: ${palette.name}! Reloading...`);

        // Reload both admin page and parent/opener window if accessible
        setTimeout(() => {
          // Try to reload parent window (if admin is in iframe/popup)
          try {
            if (window.opener && !window.opener.closed) {
              window.opener.location.reload();
            }
            if (window.parent && window.parent !== window) {
              window.parent.location.reload();
            }
          } catch (e) {
            console.log('Could not reload parent/opener:', e.message);
          }

          // Reload this admin page
          window.location.reload();
        }, 1000);
      } else {
        const error = await response.json();
        this.showError(error.message || 'Failed to apply palette');
      }
    } catch (error) {
      console.error('Error applying palette:', error);
      this.showError('Error applying palette: ' + error.message);
    }
  }

  resetToDefaultColors() {
    console.log('üîÑ Resetting to default theme colors');
    this.selectedPalette = null;
    this.renderCustomPalettes();
    
    // Hide save-and-apply button
    const saveApplyBtn = document.getElementById('save-and-apply-palette');
    if (saveApplyBtn) {
      saveApplyBtn.style.display = 'none';
    }
    
    this.showSuccess('Reset to default theme colors');
    
    // If a theme is selected, update the preview to show default colors
    if (this.currentTheme) {
      this.updatePreview();
    }
  }

  showPaletteEditor() {
    document.getElementById('palette-editor').style.display = 'block';
    // Scroll to editor
    document.getElementById('palette-editor').scrollIntoView({ behavior: 'smooth' });
  }

  hidePaletteEditor() {
    document.getElementById('palette-editor').style.display = 'none';
    this.isEditingPalette = false;
    this.editingPaletteId = null;
    this.currentPaletteColors = {};
  }

  renderPaletteColorControls() {
    const container = document.getElementById('palette-color-controls');

    // 15 Standard Color Tokens for Royal Gem Theme
    const colorGroups = [
      {
        title: 'üé® Core Brand Colors',
        description: 'Essential brand colors',
        expanded: true,
        colors: [
          { key: 'primary', label: 'Primary', desc: 'Main brand color' },
          { key: 'secondary', label: 'Secondary', desc: 'Supporting brand color' },
          { key: 'accent', label: 'Accent', desc: 'Highlight/accent color' }
        ]
      },
      {
        title: 'üñºÔ∏è Backgrounds & Surfaces',
        description: 'Background and surface colors',
        expanded: false,
        colors: [
          { key: 'bg', label: 'Background', desc: 'Main background color' },
          { key: 'bg-alt', label: 'BG Alt', desc: 'Alternative background' },
          { key: 'surface', label: 'Surface', desc: 'Card/panel surface color' }
        ]
      },
      {
        title: 'üìù Text Colors',
        description: 'Text color variations',
        expanded: false,
        colors: [
          { key: 'text', label: 'Text', desc: 'Primary text color' },
          { key: 'text-subtle', label: 'Text Subtle', desc: 'Muted/subtle text' }
        ]
      },
      {
        title: 'üéØ Borders',
        description: 'Border colors',
        expanded: false,
        colors: [
          { key: 'border', label: 'Border', desc: 'Default border color' },
          { key: 'border-muted', label: 'Border Muted', desc: 'Subtle border color' }
        ]
      },
      {
        title: 'üîç Overlay & Focus',
        description: 'Overlay and focus states',
        expanded: false,
        colors: [
          { key: 'overlay', label: 'Overlay', desc: 'Modal/dialog overlay (rgba)' },
          { key: 'focus', label: 'Focus', desc: 'Focus indicator color' }
        ]
      },
      {
        title: '‚ö° Status Colors',
        description: 'Status and feedback colors',
        expanded: false,
        colors: [
          { key: 'success', label: 'Success', desc: 'Success states' },
          { key: 'warning', label: 'Warning', desc: 'Warning states' },
          { key: 'danger', label: 'Danger', desc: 'Error/danger states' }
        ]
      }
    ];

    const renderColorInput = (colorKey, label, desc) => {
      const currentValue = this.currentPaletteColors[colorKey] || '';
      const hasValue = currentValue !== '';

      return `
      <div class="col-md-6 mb-3">
        <div class="color-control">
          <label class="form-label fw-bold d-flex justify-content-between align-items-center">
            <span>${label}</span>
            ${hasValue ? '<span class="badge bg-success" style="font-size: 0.65rem;">SET</span>' : '<span class="badge bg-secondary" style="font-size: 0.65rem;">DEFAULT</span>'}
          </label>
          <small class="text-muted d-block mb-1">${desc}</small>
          <div class="input-group input-group-sm">
            <input type="color"
                   class="form-control form-control-color"
                   id="palette-color-${colorKey}"
                   value="${currentValue || '#000000'}"
                   onchange="themeManager.updatePaletteColor('${colorKey}', this.value)">
            <input type="text"
                   class="form-control"
                   id="palette-text-${colorKey}"
                   value="${currentValue}"
                   placeholder="Use default"
                   onchange="themeManager.updatePaletteColorFromText('${colorKey}', this.value)">
            ${hasValue ? `<button class="btn btn-outline-secondary" onclick="themeManager.clearPaletteColor('${colorKey}')" title="Clear (use default)"><i class="fas fa-times"></i></button>` : ''}
          </div>
        </div>
      </div>`;
    };

    container.innerHTML = colorGroups.map((group, groupIndex) => {
      const collapseId = `colorGroup${groupIndex}`;

      return `
      <div class="mb-3">
        <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded"
             style="cursor: pointer;"
             data-bs-toggle="collapse"
             data-bs-target="#${collapseId}">
          <div>
            <strong>${group.title}</strong>
            <small class="text-muted d-block">${group.description}</small>
          </div>
          <i class="fas fa-chevron-down"></i>
        </div>
        <div class="collapse ${group.expanded ? 'show' : ''}" id="${collapseId}">
          <div class="row p-3 pt-2">
            ${group.colors.map(color => renderColorInput(color.key, color.label, color.desc)).join('')}
          </div>
        </div>
      </div>`;
    }).join('');
  }

  updatePaletteColor(property, value) {
    this.currentPaletteColors[property] = value;
    this.updatePalettePreview();

    // Update the text input too
    const textInput = document.getElementById(`palette-text-${property}`);
    if (textInput) textInput.value = value;
  }

