<!-- Hero Section -->
{{#if content.hero_section_visible}}
<section class="relative min-h-screen flex items-center justify-center overflow-hidden animate-on-scroll"
         {{#if content.heroBackgroundImageUrl}}
         style="background: color-mix(in srgb, var(--theme-primary) 20%, black 80%);"
         {{else}}
         style="background: var(--glamour-gradient);"
         {{/if}}>
    
    <!-- Parallax Background Image -->
    {{#if content.heroBackgroundImageUrl}}
    <div class="parallax-bg absolute inset-0" 
         style="background-image: url('{{content.heroBackgroundImageUrl}}'); 
                background-attachment: fixed;
                background-position: center;
                background-size: cover;
                opacity: {{#if content.hero_background_opacity}}{{content.hero_background_opacity}}{{else}}0.6{{/if}};
                z-index: 0;"></div>
    {{/if}}
    
    <!-- Hero Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="animate-fade-in">
            <h1 class="text-6xl md:text-7xl font-bold text-white mb-6 leading-tight"
                style="font-family: var(--font-display);">
                {{#if content.hero_title}}{{content.hero_title}}{{else}}{{siteName}}{{/if}}
            </h1>
            
            {{#if content.hero_subtitle}}
            <p class="text-xl md:text-2xl text-white/90 mb-8 max-w-3xl mx-auto leading-relaxed">
                {{content.hero_subtitle}}
            </p>
            {{/if}}
            
            {{#if content.hero_description}}
            <p class="text-lg text-white/80 mb-12 max-w-2xl mx-auto">
                {{content.hero_description}}
            </p>
            {{/if}}
            
            <!-- Hero CTAs -->
            <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
                {{#if content.hero_button_1_text}}
                <a href="/{{modelSlug}}/{{#if content.hero_button_1_link}}{{content.hero_button_1_link}}{{else}}calendar{{/if}}{{previewParam}}" 
                   class="glamour-btn text-lg px-8 py-4">
                    <i class="fas fa-calendar-alt"></i>
                    {{content.hero_button_1_text}}
                </a>
                {{else}}
                <a href="/{{modelSlug}}/calendar{{previewParam}}" 
                   class="glamour-btn text-lg px-8 py-4">
                    <i class="fas fa-calendar-alt"></i>
                    Book Consultation
                </a>
                {{/if}}
                
                {{#if content.hero_button_2_text}}
                <a href="/{{modelSlug}}/{{#if content.hero_button_2_link}}{{content.hero_button_2_link}}{{else}}about{{/if}}{{previewParam}}" 
                   class="glamour-btn-hero-outline">
                    <i class="fas fa-user"></i>
                    {{content.hero_button_2_text}}
                </a>
                {{else}}
                <a href="/{{modelSlug}}/about{{previewParam}}" 
                   class="glamour-btn-hero-outline">
                    <i class="fas fa-user"></i>
                    Learn More
                </a>
                {{/if}}
            </div>
        </div>
    </div>
    
    <!-- Decorative Elements -->
    <div class="absolute inset-0 pointer-events-none overflow-hidden">
        <div class="absolute top-20 left-10 w-32 h-32 border border-white/20 rounded-full animate-pulse"></div>
        <div class="absolute bottom-32 right-20 w-24 h-24 border border-white/20 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
        <div class="absolute top-1/2 left-1/4 w-16 h-16 border border-white/20 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white/80">
        <div class="animate-bounce">
            <i class="fas fa-chevron-down text-2xl"></i>
        </div>
    </div>
</section>
{{/if}}

<!-- About Preview Section -->
{{#if content.about_section_visible}}
<section class="py-20 animate-on-scroll" style="background-color: var(--theme-bg);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            
            <!-- Content -->
            <div class="animate-slide-in">
                {{#if content.about_title}}
                <h2 class="text-4xl md:text-5xl font-bold mb-6" 
                    style="color: var(--theme-text); font-family: var(--font-display);">
                    {{content.about_title}}
                </h2>
                {{else}}
                <h2 class="text-4xl md:text-5xl font-bold mb-6" 
                    style="color: var(--theme-text); font-family: var(--font-display);">
                    About {{siteName}}
                </h2>
                {{/if}}
                
                {{#if content.about_paragraph_1}}
                <p class="text-lg mb-6 leading-relaxed" style="color: var(--theme-text-subtle);">
                    {{content.about_paragraph_1}}
                </p>
                {{/if}}
                
                {{#if content.about_paragraph_2}}
                <p class="text-lg mb-8 leading-relaxed" style="color: var(--theme-text-subtle);">
                    {{content.about_paragraph_2}}
                </p>
                {{/if}}
                
                <a href="/{{modelSlug}}/about{{previewParam}}" 
                   class="glamour-btn">
                    <i class="fas fa-arrow-right"></i>
                    {{#if content.about_link_text}}{{content.about_link_text}}{{else}}Discover More{{/if}}
                </a>
            </div>
            
            <!-- Portrait -->
            {{#if content.portrait_section_visible}}
            <div class="relative">
                {{#if content.portrait_image_url}}
                <div class="glamour-card overflow-hidden transform hover:scale-105 transition-transform duration-500">
                    <img src="{{content.portrait_image_url}}" 
                         alt="{{#if content.portrait_alt}}{{content.portrait_alt}}{{else}}{{siteName}} Portrait{{/if}}"
                         class="w-full h-[600px] object-cover">
                </div>
                {{/if}}
                
                <!-- Decorative Frame -->
                <div class="absolute -inset-4 border-2 border-gradient rounded-2xl opacity-20 pointer-events-none"></div>
            </div>
            {{/if}}
        </div>
    </div>
</section>
{{/if}}

