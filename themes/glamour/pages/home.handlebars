            {{/each}}
        </div>
        {{/if}}
        
        <div class="text-center">
            <a href="/{{modelSlug}}/calendar{{previewParam}}" 
               class="glamour-btn bg-white/20 backdrop-blur-sm border border-white/20 hover:bg-white/30 text-lg px-8 py-4">
