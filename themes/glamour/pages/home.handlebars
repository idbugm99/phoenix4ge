<!-- Gallery Preview Section -->
{{#if content.gallery_section_visible}}
<section class="py-20 animate-on-scroll" style="background-color: var(--theme-bg);">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold mb-6" 
                style="color: var(--theme-text); font-family: var(--font-display);">
                {{#if content.gallery_section_title}}{{content.gallery_section_title}}{{else}}Gallery{{/if}}
            </h2>
            <p class="text-xl max-w-3xl mx-auto leading-relaxed" style="color: var(--theme-text-subtle);">
                A curated selection of professional photography showcasing elegance and sophistication.
            </p>
        </div>
        
        <!-- Gallery Preview Grid -->
        {{#if galleryImages}}
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 mb-12">
            {{#each galleryImages}}
            <div class="glamour-card overflow-hidden aspect-square group">
                <img src="/uploads/{{../modelSlug}}/public/gallery/{{this.filename}}" 
                     alt="{{#if this.caption}}{{this.caption}}{{else}}Gallery image{{/if}}"
                     class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
            </div>
            {{/each}}
        </div>
        {{/if}}
        
        <div class="text-center">
            <a href="/{{modelSlug}}/gallery{{previewParam}}" 
               class="glamour-btn text-lg px-8 py-4">
                <i class="fas fa-images"></i>
                {{#if content.gallery_button_text}}{{content.gallery_button_text}}{{else}}View Full Gallery{{/if}}
            </a>
        </div>
    </div>
</section>
{{/if}}

<!-- Travel/Calendar Section -->
{{#if content.travel_section_visible}}
<section class="py-20 animate-on-scroll" style="background: var(--glamour-gradient); color: white;">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold mb-6" style="font-family: var(--font-display);">
                {{#if content.travel_section_title}}{{content.travel_section_title}}{{else}}Upcoming Availability{{/if}}
            </h2>
            <p class="text-xl text-white/90 max-w-3xl mx-auto leading-relaxed">
                Plan ahead and secure your preferred dates for an unforgettable experience.
            </p>
        </div>
        
        {{#if upcomingEvents}}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
            {{#each upcomingEvents}}
            <div class="glamour-card bg-white/20 backdrop-blur-sm border border-white/20 p-8 text-center">
                <div class="mb-4">
                    <i class="fas fa-map-marker-alt text-3xl" style="color: var(--theme-primary);"></i>
                </div>
                <h3 class="text-xl font-semibold mb-2" style="font-family: var(--font-display); color: var(--theme-text);">
                    {{this.location}}
