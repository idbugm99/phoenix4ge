<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{#if pageTitle}}{{pageTitle}} - {{siteName}}{{else}}{{siteName}}{{/if}}</title>
    <meta name="description" content="{{metaDescription}}">
    <meta name="og:title" content="{{#if pageTitle}}{{pageTitle}} - {{siteName}}{{else}}{{siteName}}{{/if}}">
    <meta name="og:description" content="{{metaDescription}}">
    <meta name="og:type" content="website">
    <meta name="og:image" content="{{ogImage}}">
    
    <!-- Font Awesome Free Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Google Fonts - Elegant Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;1,400&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    
    <!-- Glamour Theme Styles -->
    <style>
    :root {
        /* 17-Token Color System from Database with Fallbacks */
        --theme-primary: {{#if theme.colors.primary}}{{theme.colors.primary}}{{else}}#8B5CF6{{/if}};
        --theme-secondary: {{#if theme.colors.secondary}}{{theme.colors.secondary}}{{else}}#EC4899{{/if}};
        --theme-accent: {{#if theme.colors.accent}}{{theme.colors.accent}}{{else}}#F59E0B{{/if}};
        --theme-bg: {{#if theme.colors.bg}}{{theme.colors.bg}}{{else}}#111827{{/if}};
        --theme-bg-alt: {{#if (lookup theme.colors "bg-alt")}}{{lookup theme.colors "bg-alt"}}{{else}}{{#if (lookup theme.colors "bg-light")}}{{lookup theme.colors "bg-light"}}{{else}}#1F2937{{/if}}{{/if}};
        --theme-surface: {{#if theme.colors.surface}}{{theme.colors.surface}}{{else}}#374151{{/if}};
        --theme-overlay: {{#if theme.colors.overlay}}{{theme.colors.overlay}}{{else}}rgba(139, 92, 246, 0.1){{/if}};
        --theme-text: {{#if theme.colors.text}}{{theme.colors.text}}{{else}}#F9FAFB{{/if}};
        --theme-text-subtle: {{#if (lookup theme.colors "text-subtle")}}{{lookup theme.colors "text-subtle"}}{{else}}{{#if (lookup theme.colors "text_muted")}}{{lookup theme.colors "text_muted"}}{{else}}#D1D5DB{{/if}}{{/if}};
        --theme-link: {{#if theme.colors.link}}{{theme.colors.link}}{{else}}{{#if theme.colors.accent}}{{theme.colors.accent}}{{else}}#F59E0B{{/if}}{{/if}};
        --theme-link-hover: {{#if (lookup theme.colors "link-hover")}}{{lookup theme.colors "link-hover"}}{{else}}{{#if (lookup theme.colors "accent-hover")}}{{lookup theme.colors "accent-hover"}}{{else}}#D97706{{/if}}{{/if}};
        --theme-focus: {{#if theme.colors.focus}}{{theme.colors.focus}}{{else}}{{#if theme.colors.accent}}{{theme.colors.accent}}{{else}}#F59E0B{{/if}}{{/if}};
        --theme-success: {{#if theme.colors.success}}{{theme.colors.success}}{{else}}#10B981{{/if}};
        --theme-warning: {{#if theme.colors.warning}}{{theme.colors.warning}}{{else}}#F59E0B{{/if}};
        --theme-error: {{#if theme.colors.error}}{{theme.colors.error}}{{else}}#EF4444{{/if}};
        --theme-border: {{#if theme.colors.border}}{{theme.colors.border}}{{else}}#4B5563{{/if}};
        --theme-border-muted: {{#if (lookup theme.colors "border-muted")}}{{lookup theme.colors "border-muted"}}{{else}}{{#if (lookup theme.colors "border-light")}}{{lookup theme.colors "border-light"}}{{else}}#374151{{/if}}{{/if}};
        
        /* Typography */
        --font-display: 'Playfair Display', serif;
        --font-body: 'Inter', sans-serif;
        
        /* Spacing & Layout */
        --container-max-width: 1200px;
        --section-padding-y: 4rem;
        --section-padding-x: 1.5rem;
        
        /* Glamour-Specific Design Tokens */
        --glamour-gradient: linear-gradient(135deg, var(--theme-primary), var(--theme-secondary));
        --glamour-glow: 0 0 20px rgba(147, 51, 234, 0.3);
        --glamour-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        --glamour-border-radius: 1rem;
        --glamour-transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }
    
    /* Base Styles */
    body {
        background-color: var(--theme-bg);
        color: var(--theme-text);
        font-family: var(--font-body);
        line-height: 1.6;
    }
    
    /* Typography */
    h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-display);
        font-weight: 500;
        line-height: 1.2;
        color: var(--theme-text);
    }
    
    h1 { font-size: 3rem; }
    h2 { font-size: 2.5rem; }
    h3 { font-size: 2rem; }
    h4 { font-size: 1.5rem; }
    
    /* Glamour Theme Elements */
    .glamour-gradient {
        background: var(--glamour-gradient);
        color: white;
    }
    
    .glamour-card {
        background: var(--theme-surface);
        border: 1px solid var(--theme-border-muted);
        border-radius: var(--glamour-border-radius);
        box-shadow: var(--glamour-shadow);
        transition: var(--glamour-transition);
        overflow: hidden;
    }
    
    .glamour-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--glamour-glow), var(--glamour-shadow);
    }
    
    .glamour-btn {
        background: var(--glamour-gradient);
        color: white;
        padding: 0.875rem 2rem;
        border-radius: 50px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: var(--glamour-transition);
        border: none;
        cursor: pointer;
        font-size: 1rem;
    }
    
    .glamour-btn:hover {
        transform: translateY(-2px);
        box-shadow: var(--glamour-glow);
        text-decoration: none;
        color: white;
    }
    
    .glamour-btn-outline {
        background: transparent;
        color: var(--theme-primary);
        padding: 0.875rem 2rem;
        border-radius: 50px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: var(--glamour-transition);
        border: 2px solid var(--theme-primary);
        cursor: pointer;
        font-size: 1rem;
    }
    
    .glamour-btn-outline:hover {
        background: var(--theme-primary);
        color: white;
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: var(--glamour-glow);
    }
    
    /* Hero section outline buttons (light on gradient background) */
    .glamour-btn-hero-outline {
        background: transparent;
        color: var(--theme-bg);
        padding: 0.875rem 2rem;
        border-radius: 50px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: var(--glamour-transition);
        border: 2px solid var(--theme-bg);
        cursor: pointer;
        font-size: 1.125rem;
    }

    .glamour-btn-hero-outline:hover {
        background: var(--theme-bg);
        color: var(--theme-primary);
        text-decoration: none;
        transform: translateY(-2px);
        box-shadow: 0 10px 25px -5px color-mix(in srgb, var(--theme-bg) 30%, transparent 70%);
    }
    
    /* Parallax and Animation Styles */
    .parallax-bg {
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
    
    @media (prefers-reduced-motion: reduce) {
        .parallax-bg {
            background-attachment: scroll;
        }
        * {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }
    }
    
    /* Micro-animations */
    @keyframes glamourFadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes glamourSlideIn {
        from { opacity: 0; transform: translateX(-30px); }
        to { opacity: 1; transform: translateX(0); }
    }
    
    .animate-fade-in {
        animation: glamourFadeIn 0.8s ease-out forwards;
    }
    
    .animate-slide-in {
        animation: glamourSlideIn 0.8s ease-out forwards;
    }
    
    /* Focus States for Accessibility */
    a:focus,
    button:focus,
    input:focus,
    textarea:focus,
    select:focus {
        outline: 2px solid var(--theme-focus);
        outline-offset: 2px;
    }
    
    /* Link Styles */
    a {
        color: var(--theme-link);
        transition: color 0.3s ease;
    }
    
    a:hover {
        color: var(--theme-link-hover);
    }
    
    /* Navigation Styles */
    .glamour-nav {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid var(--theme-border-muted);
        transition: var(--glamour-transition);
    }
    
    .glamour-nav.scrolled {
        background: rgba(255, 255, 255, 0.98);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
        :root {
            --section-padding-y: 2rem;
            --section-padding-x: 1rem;
        }
        
        h1 { font-size: 2.5rem; }
        h2 { font-size: 2rem; }
        h3 { font-size: 1.75rem; }
    }
    </style>
    
    <!-- Theme Color Loader -->
    <script src="/public/js/theme-color-loader.js"></script>
    <!-- Responsive Design -->
    <link rel="stylesheet" href="/themes/glamour/assets/glamour-responsive.css">
</head>

<body style="background-color: var(--theme-bg);">
    <!-- Navigation -->
    {{> navigation}}
    
    <!-- Theme Preview Banner -->
    {{#if theme.isPreview}}
    <div class="bg-orange-500 text-white py-2 px-4 text-center text-sm font-medium">
        <i class="fas fa-eye mr-2"></i>You are previewing the <strong>{{theme.previewThemeName}}</strong> theme. This is not your active theme.
    </div>
    {{/if}}
    
    <!-- Main Content -->
    <main>
        {{{body}}}
    </main>
    
    <!-- Footer -->
    {{> footer}}
    
    <!-- Scripts -->
    <script>
        // Navigation scroll effect
        window.addEventListener('scroll', function() {
            const nav = document.querySelector('.glamour-nav');
            if (nav) {
                if (window.scrollY > 50) {
                    nav.classList.add('scrolled');
                } else {
                    nav.classList.remove('scrolled');
                }
            }
        });
        
        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-fade-in');
                }
            });
        }, observerOptions);
        
        // Observe all elements with animation classes
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.animate-on-scroll').forEach(el => {
                observer.observe(el);
            });
        });
    </script>
    
    <!-- Additional page-specific scripts -->
    {{#if additionalJS}}
    <script>
        {{{additionalJS}}}
    </script>
    {{/if}}
</body>
</html>