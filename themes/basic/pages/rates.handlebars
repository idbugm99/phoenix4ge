<!-- Sticky Navigation and Smooth Scroll JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    const stickyNav = document.getElementById('sticky-nav');
    const navLinks = document.querySelectorAll('.nav-link, .nav-link-mobile');
    const sections = document.querySelectorAll('section[id]');
    
    // Sticky navigation behavior
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.target.id === 'rates-section') {
                if (!entry.isIntersecting) {
                    stickyNav.classList.add('sticky-nav-active');
                } else {
                    stickyNav.classList.remove('sticky-nav-active');
                }
            }
        });
    }, {
        rootMargin: '0px 0px -90% 0px'
    });
    
    // Observe the first section to trigger sticky nav
    const ratesSection = document.getElementById('rates-section');
    if (ratesSection) {
        observer.observe(ratesSection);
    }
    
    // Smooth scrolling for navigation links
    navLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            
            const targetId = this.getAttribute('href').substring(1);
            const targetSection = document.getElementById(targetId);
            
            if (targetSection) {
                // Calculate offset for both main nav (64px) and sticky nav
                const navHeight = window.innerWidth >= 768 ? (stickyNav ? stickyNav.offsetHeight : 0) : 60;
                const mainNavHeight = 64;
                const targetPosition = targetSection.offsetTop - mainNavHeight - navHeight - 20;
                
                window.scrollTo({
                    top: targetPosition,
                    behavior: 'smooth'
                });
                
                // Update active nav link for both desktop and mobile
                navLinks.forEach(nl => nl.classList.remove('active'));
                this.classList.add('active');
                
                // Also update the corresponding link in the other nav (desktop/mobile)
                const correspondingLinks = document.querySelectorAll(`[href="${this.getAttribute('href')}"]`);
                correspondingLinks.forEach(cl => cl.classList.add('active'));
            }
        });
    });
    
    // Update active nav link on scroll
    const scrollObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const targetId = entry.target.id;
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href') === `#${targetId}`) {
                        link.classList.add('active');
                    }
                });
            }
        });
    }, {
        rootMargin: '-20% 0px -70% 0px'
    });
    
    // Observe all sections for active nav highlighting
    sections.forEach(section => {
        scrollObserver.observe(section);
    });
});
</script>