<!-- Contact Page - RoseMastos Style Structure -->
<section class="py-16 theme-bg-light text-base">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Page Header -->
        {{#if contact_content.contact_header_visible}}
        <div class="text-center mb-12" data-aos="fade-up">
            <h1 class="text-4xl font-bold mb-6 text-base">
                {{#if contact_content.page_title}}{{contact_content.page_title}}{{else}}Contact Me{{/if}}
            </h1>
            {{#if contact_content.page_subtitle}}
            <p class="text-xl text-subtle max-w-3xl mx-auto">
                {{contact_content.page_subtitle}}
            </p>
            {{/if}}
        </div>
        {{/if}}
        
        <div class="grid md:grid-cols-2 gap-12">
            <!-- Contact Form -->
            {{#if contact_content.contact_form_visible}}
            <div class="bg-surface border border-light p-8 rounded-2xl" style="box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);" data-aos="fade-up" data-aos-delay="100">
                <h2 class="text-2xl font-bold mb-6 text-base">
                    {{#if contact_content.form_title}}{{contact_content.form_title}}{{else}}Send a Message{{/if}}
                </h2>
                
                <form method="POST" class="space-y-6" id="contactForm">
                    <!-- Honeypot field -->
                    <input type="text" name="website" style="display: none;" tabindex="-1" autocomplete="off">
                    
                    <div>
                        <label for="name" class="block font-medium mb-2" style="font-size: 12px; line-height: 16px; color: {{theme.colors.text}};">
                            {{#if contact_content.form_name_label}}{{contact_content.form_name_label}}{{else}}Your Name{{/if}}<span style="color: {{theme.colors.danger}};">*</span>
                        </label>
                        <input type="text" id="name" name="name" required 
                               class="w-full px-4 border contact-input" style="height: 44px; border-radius: 12px; border-color: {{theme.colors.border-light}};">
                        <div class="error-message hidden" style="font-size: 12px; line-height: 16px; color: {{theme.colors.danger}}; margin-top: 4px;"></div>
                    </div>
                    
                    <div>
                        <label for="email" class="block font-medium mb-2" style="font-size: 12px; line-height: 16px; color: {{theme.colors.text}};">
                            {{#if contact_content.form_email_label}}{{contact_content.form_email_label}}{{else}}Email Address{{/if}}<span style="color: {{theme.colors.danger}};">*</span>
                        </label>
                        <input type="email" id="email" name="email" required 
                               class="w-full px-4 border contact-input" style="height: 44px; border-radius: 12px; border-color: {{theme.colors.border-light}};">
                        <div class="error-message hidden" style="font-size: 12px; line-height: 16px; color: {{theme.colors.danger}}; margin-top: 4px;"></div>
                    </div>
                    
                    <div>
                        <label for="phone" class="block font-medium mb-2 text-subtle" style="font-size: 12px; line-height: 16px;">
                            {{#if contact_content.form_phone_label}}{{contact_content.form_phone_label}}{{else}}Phone Number (Optional){{/if}}
                        </label>
                        <input type="tel" id="phone" name="phone" 
                               class="w-full px-4 border contact-input" style="height: 44px; border-radius: 12px; border-color: {{theme.colors.border-light}};">
                        <div class="error-message hidden" style="font-size: 12px; line-height: 16px; color: {{theme.colors.danger}}; margin-top: 4px;"></div>
                    </div>
                    
                    <div>
                        <label for="date" class="block font-medium mb-2 text-subtle" style="font-size: 12px; line-height: 16px;">
                            {{#if contact_content.form_date_label}}{{contact_content.form_date_label}}{{else}}Preferred Date{{/if}}
                        </label>
                        <input type="date" id="date" name="date" 
                               class="w-full px-4 border contact-input" style="height: 44px; border-radius: 12px; border-color: {{theme.colors.border-light}};">
                        <div class="error-message hidden" style="font-size: 12px; line-height: 16px; color: {{theme.colors.danger}}; margin-top: 4px;"></div>
                    </div>
                    
                    <div>
                        <label for="duration" class="block font-medium mb-2 text-subtle" style="font-size: 12px; line-height: 16px;">
                            {{#if contact_content.form_duration_label}}{{contact_content.form_duration_label}}{{else}}Duration{{/if}}
                        </label>
                        <select id="duration" name="duration" 
                                class="w-full px-4 border contact-input" style="height: 44px; border-radius: 12px; border-color: {{theme.colors.border-light}};">
                            <option value="">Select duration</option>
                            {{#each (split (or contact_content.form_duration_options "1 Hour,90 Minutes,2 Hours,3 Hours,Overnight,Extended (please specify)") ",")}}
                                <option value="{{trim this}}">{{trim this}}</option>
                            {{/each}}
                        </select>
                        <div class="error-message hidden" style="font-size: 12px; line-height: 16px; color: {{theme.colors.danger}}; margin-top: 4px;"></div>
                    </div>
                    
                    <div>
                        <label for="message" class="block font-medium mb-2 text-subtle" style="font-size: 12px; line-height: 16px;">
                            {{#if contact_content.form_message_label}}{{contact_content.form_message_label}}{{else}}Message{{/if}}<span style="color: var(--theme-error);">*</span>
                        </label>
                        <textarea id="message" name="message" rows="5" required 
                                  class="w-full px-4 py-3 border contact-input theme-border-light" style="border-radius: 12px;"
                                  placeholder="{{#if contact_content.form_message_placeholder}}{{contact_content.form_message_placeholder}}{{else}}Please include any specific requests or questions...{{/if}}"></textarea>
                        <div class="error-message hidden" style="font-size: 12px; line-height: 16px; color: {{theme.colors.danger}}; margin-top: 4px;"></div>
                    </div>
                    
                    <button type="submit" id="submitBtn"
                            class="w-full md:w-auto bg-primary text-inverse py-3 px-6 rounded-lg font-semibold hover:bg-primary-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                        <span class="button-text">{{#if contact_content.form_button_text}}{{contact_content.form_button_text}}{{else}}Send Message{{/if}}</span>
                        <span class="spinner hidden">Sending...</span>
                    </button>
                </form>
            </div>
            {{/if}}
            
            <!-- Contact Information Sections -->
            <div class="space-y-8">
                <!-- Direct Contact -->
                {{#if contact_content.contact_direct_visible}}
                <div class="bg-surface border border-light p-8 rounded-2xl" style="box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);" data-aos="fade-up" data-aos-delay="200">
                    <h2 class="text-2xl font-bold mb-6 text-base">
                        {{#if contact_content.direct_title}}{{contact_content.direct_title}}{{else}}Direct Contact{{/if}}
                    </h2>
                    <div class="space-y-4">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 mr-3 text-base" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            <div>
                                <p class="font-medium text-base">
                                    {{#if contact_content.direct_email_label}}{{contact_content.direct_email_label}}{{else}}Email{{/if}}
                                </p>
                                <p class="text-subtle">
                                    <a href="mailto:{{contactEmail}}" class="text-base hover:underline">{{contactEmail}}</a>
                                </p>
                            </div>
                        </div>
                        
                        {{#if contactPhone}}
                        <div class="flex items-center">
                            <svg class="w-5 h-5 mr-3 text-base" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                            </svg>
                            <div>
                                <p class="font-medium text-base">
                                    {{#if contact_content.direct_phone_label}}{{contact_content.direct_phone_label}}{{else}}Phone{{/if}}
                                </p>
                                <p class="text-subtle">
                                    <a href="tel:{{contactPhone}}" class="text-base hover:underline">{{contactPhone}}</a>
                                </p>
                            </div>
                        </div>
                        {{/if}}
                        
                        <div class="flex items-center">
                            <svg class="w-5 h-5 mr-3 text-base" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <div>
                                <p class="font-medium text-base" style="font-size: 12px; line-height: 18px;">
                                    {{#if contact_content.direct_response_text}}{{contact_content.direct_response_text}}{{else}}I typically respond within 2-4 hours{{/if}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
                
                <!-- Booking Guidelines -->
                {{#if contact_content.contact_guidelines_visible}}
                <div class="bg-surface border border-light p-8 rounded-2xl" style="box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);" data-aos="fade-up" data-aos-delay="300">
                    <h3 class="text-xl font-bold mb-4 text-base">
                        {{#if contact_content.guidelines_title}}{{contact_content.guidelines_title}}{{else}}Booking Guidelines{{/if}}
                    </h3>
                    <div class="space-y-2 text-subtle">
                        {{#if contact_content.guideline_1}}
                        <div class="flex items-start">
                            <span class="text-base mr-2 mt-1">•</span>
                            <span>{{contact_content.guideline_1}}</span>
                        </div>
                        {{/if}}
                        {{#if contact_content.guideline_2}}
                        <div class="flex items-start">
                            <span class="text-base mr-2 mt-1">•</span>
                            <span>{{contact_content.guideline_2}}</span>
                        </div>
                        {{/if}}
                        {{#if contact_content.guideline_3}}
                        <div class="flex items-start">
                            <span class="text-base mr-2 mt-1">•</span>
                            <span>{{contact_content.guideline_3}}</span>
                        </div>
                        {{/if}}
                        {{#if contact_content.guideline_4}}
                        <div class="flex items-start">
                            <span class="text-base mr-2 mt-1">•</span>
                            <span>{{contact_content.guideline_4}}</span>
                        </div>
                        {{/if}}
                    </div>
                </div>
                {{/if}}
                
                <!-- Location & Services -->
                {{#if contact_content.contact_location_visible}}
                <div class="bg-surface border border-light p-8 rounded-2xl" style="box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);" data-aos="fade-up" data-aos-delay="400">
                    <h3 class="text-xl font-bold mb-4 text-base">
                        {{#if contact_content.location_title}}{{contact_content.location_title}}{{else}}Location & Services{{/if}}
                    </h3>
                    <div class="space-y-2 text-subtle">
                        {{#if contact_content.location_area_text}}
                        <div class="flex items-start">
                            <span class="text-base mr-2 mt-1">•</span>
                            <span>{{contact_content.location_area_text}}</span>
                        </div>
                        {{/if}}
                        {{#if contact_content.location_services_text}}
                        <div class="flex items-start">
                            <span class="text-base mr-2 mt-1">•</span>
                            <span>{{contact_content.location_services_text}}</span>
                        </div>
                        {{/if}}
                    </div>
                </div>
                {{/if}}
                
                <!-- Privacy & Discretion -->
                {{#if contact_content.contact_privacy_visible}}
                <div class="theme-bg-surface text-inverse p-6 rounded-2xl shadow-lg" data-aos="fade-up" data-aos-delay="500">
                    <h3 class="text-lg font-bold mb-3">
                        {{#if contact_content.privacy_title}}{{contact_content.privacy_title}}{{else}}Privacy & Discretion{{/if}}
                    </h3>
                    <p class="text-subtle text-sm leading-relaxed">
                        {{#if contact_content.privacy_text}}{{contact_content.privacy_text}}{{else}}All communications are handled with the utmost discretion and confidentiality. Your privacy is my priority.{{/if}}
                    </p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>

<script>
// Contact form handling with spam protection
let lastSubmitTime = 0;
const SUBMIT_COOLDOWN = 5000; // 5 seconds

document.getElementById('contactForm')?.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Throttle submissions
    const now = Date.now();
    if (now - lastSubmitTime < SUBMIT_COOLDOWN) {
        showError('Please wait before submitting again.');
        return;
    }
    
    // Get form data
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    // Check honeypot
    if (data.website) {
        // Silent fail for bots
        return;
    }
    
    // Clear previous errors
    clearErrors();
    
    // Validate required fields
    let hasErrors = false;
    
    if (!data.name?.trim()) {
        showFieldError('name', 'Name is required.');
        hasErrors = true;
    }
    
    if (!data.email?.trim()) {
        showFieldError('email', 'Email is required.');
        hasErrors = true;
    } else if (!isValidEmail(data.email)) {
        showFieldError('email', 'Please enter a valid email address.');
        hasErrors = true;
    }
    
    if (!data.message?.trim()) {
        showFieldError('message', 'Message is required.');
        hasErrors = true;
    }
    
    if (hasErrors) return;
    
    // Show loading state
    const submitBtn = document.getElementById('submitBtn');
    const buttonText = submitBtn.querySelector('.button-text');
    const spinner = submitBtn.querySelector('.spinner');
    
    submitBtn.disabled = true;
    buttonText.classList.add('hidden');
    spinner.classList.remove('hidden');
    
    // Simulate form submission
    setTimeout(() => {
        lastSubmitTime = now;
        
        // Reset button state
        submitBtn.disabled = false;
        buttonText.classList.remove('hidden');
        spinner.classList.add('hidden');
        
        // Show success message
        alert('Thank you for your message! I will get back to you soon.');
        
        // Reset form
        this.reset();
    }, 2000);
});

function showFieldError(fieldName, message) {
    const field = document.getElementById(fieldName);
    const errorDiv = field.parentElement.querySelector('.error-message');
    
    field.style.borderColor = 'var(--theme-error)';
    errorDiv.textContent = message;
    errorDiv.classList.remove('hidden');
}

function clearErrors() {
    document.querySelectorAll('.contact-input').forEach(input => {
        input.style.borderColor = 'var(--theme-border-light)';
    });
    document.querySelectorAll('.error-message').forEach(error => {
        error.classList.add('hidden');
    });
}

function showError(message) {
    alert(message);
}

function isValidEmail(email) {
    return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
}
</script>

<style>
