<!-- About Main Content -->
<section class="py-20 theme-bg-light text-base relative">
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-16 items-start">
