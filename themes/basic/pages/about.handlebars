                        {{#if about_content.service_2}}
                        <li class="flex items-start">
                            <svg class="w-3 h-3 text-accent mr-2 mt-2 flex-shrink-0" fill="currentColor" viewBox="0 0 8 8">
                                <path d="M4 0L5.09 2.55L8 2.55L5.82 4.27L6.91 6.82L4 5.1L1.09 6.82L2.18 4.27L0 2.55L2.91 2.55L4 0Z"/>
                            </svg>
                            <span class="text-lg text-subtle">{{about_content.service_2}}</span>
                        </li>
                        {{/if}}
                        {{#if about_content.service_3}}
                        <li class="flex items-start">
