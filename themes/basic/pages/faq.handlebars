    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center" data-aos="fade-up">
        <h2 class="text-3xl font-bold mb-6 text-base">
            Ready to Get Started?
        </h2>
        <p class="text-xl mb-8 opacity-90 max-w-2xl mx-auto">
            Now that you have your questions answered, let's discuss how I can help you.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a href="/{{modelSlug}}/contact" class="basic-btn theme-bg-tertiary text-basic-primary hover:opacity-90">
                <i class="fas fa-envelope mr-2"></i>
                Get in Touch
            </a>
            <a href="/{{modelSlug}}/rates" class="basic-btn-outline border-white text-inverse hover:bg-white hover:text-basic-primary">
                <i class="fas fa-list mr-2"></i>
                View Services
            </a>
        </div>
    </div>
</section>

<script>
function toggleFaq(index) {
    const faqItems = document.querySelectorAll('.faq-item');
    const currentItem = faqItems[index];
    const answer = currentItem.querySelector('.faq-answer');
    const icon = currentItem.querySelector('.faq-icon i');
    
    // Close all other FAQ items
    faqItems.forEach((item, i) => {
        if (i !== index) {
            const otherAnswer = item.querySelector('.faq-answer');
            const otherIcon = item.querySelector('.faq-icon i');
            
            otherAnswer.classList.add('hidden');
            otherIcon.classList.remove('fa-minus');
            otherIcon.classList.add('fa-plus');
        }
    });
    
    // Toggle current FAQ item
    if (answer.classList.contains('hidden')) {
        answer.classList.remove('hidden');
        icon.classList.remove('fa-plus');
        icon.classList.add('fa-minus');
    } else {
        answer.classList.add('hidden');
        icon.classList.remove('fa-minus');
        icon.classList.add('fa-plus');
    }
}

// Category filtering
document.addEventListener('DOMContentLoaded', function() {
    const categoryFilters = document.querySelectorAll('.faq-category-filter');
    const faqItems = document.querySelectorAll('.faq-item');
    
    categoryFilters.forEach(filter => {
        filter.addEventListener('click', function() {
            const category = this.dataset.category;
            
            // Update active filter
            categoryFilters.forEach(f => f.classList.remove('active', 'bg-basic-primary', 'text-inverse'));
            this.classList.add('active', 'bg-basic-primary', 'text-inverse');
            
            // Filter FAQ items
            faqItems.forEach(item => {
                if (category === 'all' || item.dataset.category === category) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
            
            // Close all open FAQs when filtering
            const answers = document.querySelectorAll('.faq-answer');
            const icons = document.querySelectorAll('.faq-icon i');
            
            answers.forEach(answer => answer.classList.add('hidden'));
            icons.forEach(icon => {
                icon.classList.remove('fa-minus');
                icon.classList.add('fa-plus');
            });
        });
    });
});
</script>