.rose-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.rose-nav-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.rose-logo {
    font-size: 1.25rem;
    font-weight: bold;
    color: #e91e63;
    text-decoration: none;
}

.desktop-nav {
    gap: 2rem;
    align-items: center;
}

.desktop-nav .nav-link {
    color: #333;
    text-decoration: none;
    padding: 0.5rem 1rem;
    transition: all 0.3s;
}

.desktop-nav .nav-link:hover,
.desktop-nav .nav-link.active {
    color: #e91e63;
}

.mobile-menu-btn button {
    background: none;
    border: none;
    font-size: 1.5rem;
    color: #e91e63;
    cursor: pointer;
    padding: 0.5rem;
}

#mobile-menu {
    background: white;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    padding: 1rem;
}

#mobile-menu .nav-link {
    display: block;
    padding: 0.75rem 1.5rem;
    color: #333;
    text-decoration: none;
    transition: all 0.3s;
}

#mobile-menu .nav-link:hover,
#mobile-menu .nav-link.active {
    background: rgba(233, 30, 99, 0.1);
    color: #e91e63;
}
</style>