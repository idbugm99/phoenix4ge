<!-- Footer - Universal Component with Theme Classes -->
<!-- This footer works across all themes using universal CSS variables -->

<footer class="theme-section-alt relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, var(--theme-accent) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 relative z-10">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Brand Section -->
            <div class="md:col-span-2">
                <h3 class="text-3xl font-bold mb-4 theme-header">
                    {{siteName}}
                </h3>
                <p class="theme-text-secondary mb-6 text-lg leading-relaxed">
                    {{#if tagline}}
                    {{tagline}}
                    {{else}}
                    Experience the pinnacle of luxury and sophistication with personalized, exclusive services.
                    {{/if}}
                </p>
                {{#if socialLinks}}
                <div class="flex space-x-4">
                    {{#each socialLinks}}
                    <a href="{{this.url}}" 
                       class="w-12 h-12 theme-accent-bg rounded-full flex items-center justify-center theme-text-inverted hover:shadow-xl transition-all duration-300 transform hover:scale-110 hover:-translate-y-1">
                        <i class="fab fa-{{this.icon}}"></i>
                    </a>
                    {{/each}}
                </div>
                {{/if}}
            </div>
            
            <!-- Quick Links -->
            <div class="hidden md:block">
                <h4 class="text-xl font-bold mb-6 theme-accent">Quick Links</h4>
                <ul class="space-y-3">
                    {{#each navigation}}
                    <li>
                        <a href="{{this.url}}"
                           class="theme-text-secondary hover:theme-accent transition-colors duration-300 flex items-center group">
                            <i class="fas fa-angle-right mr-2 group-hover:transform group-hover:translate-x-1 transition-transform duration-200"></i>
                            {{this.name}}
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            
            <!-- Contact Info -->
            <div>
                <h4 class="text-xl font-bold mb-6 theme-accent">Contact</h4>
                <ul class="space-y-4">
                    {{#if contactEmail}}
                    <li class="flex items-start group">
                        <i class="fas fa-envelope theme-accent mt-1 mr-3 group-hover:scale-110 transition-transform duration-200"></i>
                        <a href="mailto:{{contactEmail}}" 
                           class="theme-text-secondary hover:theme-accent transition-colors duration-300">
                            {{contactEmail}}
                        </a>
                    </li>
                    {{/if}}
                    {{#if contactPhone}}
                    <li class="flex items-start group">
                        <i class="fas fa-phone theme-accent mt-1 mr-3 group-hover:scale-110 transition-transform duration-200"></i>
                        <a href="tel:{{contactPhone}}" 
                           class="theme-text-secondary hover:theme-accent transition-colors duration-300">
                            {{contactPhone}}
                        </a>
                    </li>
                    {{/if}}
                    {{#if location}}
                    <li class="flex items-start group">
                        <i class="fas fa-map-marker-alt theme-accent mt-1 mr-3 group-hover:scale-110 transition-transform duration-200"></i>
                        <span class="theme-text-secondary">{{location}}</span>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </div>
        
        <!-- Bottom Bar -->
        <div class="border-t theme-border-light mt-12 pt-8 flex flex-col md:flex-row justify-between items-center">
            <p class="theme-text-muted text-sm font-medium">
                Â© {{currentYear}} {{siteName}}. All rights reserved. | Privacy & Discretion Guaranteed
            </p>
            <div class="flex items-center space-x-3 mt-4 md:mt-0">
                <span class="theme-text-muted text-sm font-medium">Powered by</span>
                <span class="theme-accent font-semibold text-base hover:opacity-80 transition-opacity cursor-default">phoenix4ge</span>
            </div>
        </div>
    </div>
    
    <!-- Decorative Footer Accent -->
    <div class="absolute bottom-0 left-0 right-0 h-1 theme-accent-bg opacity-50"></div>
</footer>

<!-- Footer Styles -->
<style>
/* Universal Footer Theming */
footer.theme-section-alt {
    position: relative;
}

/* Smooth hover animations */
footer a {
    transition: all 0.3s ease;
}

footer a:hover {
    transform: translateY(-1px);
}

/* Icon hover effects */
footer .group:hover i {
    color: var(--theme-accent);
}

/* Social link enhancements */
footer .theme-accent-bg:hover {
    box-shadow: 0 8px 25px color-mix(in srgb, var(--theme-accent), transparent 60%);
}

/* Background pattern responsive adjustments */
@media (max-width: 768px) {
    footer .absolute.inset-0 {
        background-size: 30px 30px;
    }
    
    footer .grid {
        gap: 2rem;
    }
    
    footer .md\\:col-span-2 {
        grid-column: span 1;
    }
}

/* Footer link focus styles for accessibility */
footer a:focus {
    outline: 2px solid var(--theme-accent);
    outline-offset: 2px;
    border-radius: 4px;
}

/* Subtle footer entrance animation */
footer {
    animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Enhanced Quick Links */
footer .quick-links li:hover {
    padding-left: 4px;
    transition: padding-left 0.2s ease;
}

/* Decorative elements */
footer .theme-header {
    position: relative;
}

footer .theme-header::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 3px;
    background: var(--theme-accent);
    border-radius: 2px;
    opacity: 0.7;
}

/* Contact section icon animations */
footer .fas {
    transition: all 0.2s ease;
}

/* Bottom bar enhancements */
footer .border-t {
    position: relative;
}

footer .border-t::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 1px;
    background: var(--theme-accent);
    opacity: 0.3;
}

/* Mobile responsiveness */
@media (max-width: 640px) {
    footer .text-3xl {
        font-size: 2rem;
    }

    footer .grid {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    footer .md\\:col-span-2 {
        grid-column: span 1;
    }

    footer .flex.space-x-4 {
        justify-content: center;
    }
}

/* Force hide Quick Links on mobile - using multiple selectors for better targeting */
@media (max-width: 767px) {
    footer .hidden.md\\:block,
    footer div.hidden,
    footer .grid > div:nth-child(3) {
        display: none !important;
    }
}
</style>